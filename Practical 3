C Program: Undo Redo Functionality Using Stacks
 This C program simulates a basic undo-redo feature using two stacks. It maintains a 'current' text
 buffer and allows users to make changes, undo them, or redo undone changes.
 #include <stdio.h>
 #include <string.h>
 #include <stdlib.h>
 #define MAX 100
 char undoStack[MAX][MAX];
 char redoStack[MAX][MAX];
 char current[MAX] = "";
 int topUndo = -1, topRedo = -1;
 // Push to stack
 void push(char stack[MAX][MAX], int *top, char *text) {
    (*top)++;
    strcpy(stack[*top], text);
 }
 // Pop from stack
 char* pop(char stack[MAX][MAX], int *top) {
    if (*top == -1) return NULL;
    return stack[(*top)--];
 }
 // Make a change
 void makeChange(char *text) {
    push(undoStack, &topUndo, current); // Save current to undo stack
    strcpy(current, text);              // Update current
    topRedo = -1;                       // Clear redo stack
    printf("Change done.\n");
 }
 // Undo last change
 void undo() {
    if (topUndo == -1) {
        printf("Nothing to undo.\n");
        return;
    }
    push(redoStack, &topRedo, current); // Save current to redo stack
    strcpy(current, pop(undoStack, &topUndo)); // Revert to last
    printf("Undo done.\n");
 }
 // Redo last undone change
 void redo() {
    if (topRedo == -1) {
        printf("Nothing to redo.\n");
        return;
    }
    push(undoStack, &topUndo, current); // Save current to undo stack
    strcpy(current, pop(redoStack, &topRedo)); // Reapply last
    printf("Redo done.\n");
 }
 // Show current document
 void display() {
    printf("Current Document: %s\n", current);
 }
 int main() {
    int choice;
    char text[MAX];
    while (1) {
        printf("\n1. Make Change\n2. Undo\n3. Redo\n4. Display\n5. Exit\n");
        scanf("%d", &choice);
        getchar(); // clear buffer
        if (choice == 1) {
            printf("Enter new text: ");
            fgets(text, MAX, stdin);
            text[strcspn(text, "\n")] = 0;
            makeChange(text);
        } else if (choice == 2) {
            undo();
        } else if (choice == 3) {
            redo();
        } else if (choice == 4) {
            display();
        } else if (choice == 5) {
            break;
        } else {
            printf("Invalid choice.\n");
        }
    }
    return 0;
 }
